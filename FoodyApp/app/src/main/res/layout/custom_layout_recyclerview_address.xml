<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:id="@+id/cardviewDiner">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                android:id="@+id/txtMediumScore"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="0"
                android:gravity="center"
                android:background="@drawable/background_circle"
                android:textColor="#fff"
                android:layout_margin="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="5dp">
                <TextView
                    android:id="@+id/txtAddress_DinerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hot and Cold"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/txtDinerAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="173 Nguyễn Gia Trí P25 BT"/>

            </LinearLayout>
            <TextView
                android:id="@+id/txtDistance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2.5 km"
                android:gravity="bottom"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgAddress_DinerPic"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"/>

        <Button
            android:id="@+id/btnAddress_Order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/order"
            android:background="@drawable/button_radius_order"
            android:textColor="@color/colorAccent"
            android:textAllCaps="false"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/baseline_local_shipping_white_18dp"
            android:padding="5dp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/containerComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cicleImageUser"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="5.2"
                android:gravity="center"
                android:src="@drawable/background"
                android:textColor="#fff"
                android:layout_margin="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="5dp">
                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hot and Cold"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/txtContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="173 Nguyễn Gia Trí P25 BT"/>

            </LinearLayout>
            <TextView
                android:id="@+id/txtMark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8.0"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/containerComment2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cicleImageUser2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="5.2"
                android:gravity="center"
                android:src="@drawable/background"
                android:textColor="#fff"
                android:layout_margin="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="5dp">
                <TextView
                    android:id="@+id/txtTitle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hot and Cold"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/txtContent2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="173 Nguyễn Gia Trí P25 BT"/>

            </LinearLayout>
            <TextView
                android:id="@+id/txtMark2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="7.5"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/txtTotalComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_insert_comment_black_24dp"
                android:drawablePadding="5dp"
                android:layout_margin="5dp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/txtTotalPic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_photo_camera_black_24dp"
                android:drawablePadding="5dp"
                android:layout_margin="5dp"
                android:padding="5dp"/>
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
